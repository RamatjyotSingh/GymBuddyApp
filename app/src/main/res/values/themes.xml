<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Light Mode. -->
    <style name="Theme.GymBuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Blue). -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Light Blue). -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_400</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- Dark theme with Blue tones -->
    <style name="Theme.GymBuddy.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Dark Blue). -->
        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Darker Blue). -->
        <item name="colorSecondary">@color/blue_600</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Darker Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize for Dark Mode -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Base theme without Action Bar for certain screens -->
    <style name="Theme.GymBuddy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Rounded corners for image views -->
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- AppBar overlay for dark theme -->
    <style name="Theme.GymBuddy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup overlay for dark theme -->
    <style name="Theme.GymBuddy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
