<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Set Number -->
    <TextView
        android:id="@+id/tvSetNumber"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="@string/setNumberPlaceholder"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:minHeight="48dp"
        android:minWidth="48dp" />

    <!-- Reps Input -->
    <EditText
        android:id="@+id/edtReps"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:autofillHints=""
        android:hint="@string/reps"
        android:inputType="number"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp"
        android:minHeight="48dp" />

    <!-- Time Input -->
    <EditText
        android:id="@+id/edtTime"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:autofillHints=""
        android:hint="@string/time_sec"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp"
        android:minHeight="48dp" />

    <!-- Weight Input -->
    <EditText
        android:id="@+id/edtWeight"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:autofillHints=""
        android:hint="@string/weight_lbs"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp"
        android:minHeight="48dp" />

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/btnDeleteSet"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_remove"
        android:contentDescription="@string/delete_set_button_content_description"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:minHeight="48dp"
        android:minWidth="48dp"
        app:tint="@color/error" />
</LinearLayout>
